    <script>

    // Get the DOM Elements
        var jokeText = document.querySelector(".jokeText");
        var jokeButton = document.querySelector(".jokeButton");
    
    // Fetch a joke from the API
        async function fetchJoke() {
        const response = await fetch("https://icanhazdadjoke.com", {
            headers: {
            Accept: "application/json",
            },
        });
        const data = response.json();
        return data;
        }
       
    // Handle the button click
        async function handleClick() {
            const { joke } = await fetchJoke();
            //console.log(joke);
            jokeText.textContent = joke;
        }

        // function handleClick() {
        //     jokeText.textContent = "did something...";
        // }
        
        jokeButton.addEventListener("click", handleClick);

    </script>
    
    
    <!-- Joke -->
    <section class="Joke card glass p-3">
        
        <div class="font-mono text-2xl text-center">
            <p class="jokeText"></p>
            <button class="jokeButton btn btn-wide">Tell A Joke!</button>
        </div>
    
    </section>